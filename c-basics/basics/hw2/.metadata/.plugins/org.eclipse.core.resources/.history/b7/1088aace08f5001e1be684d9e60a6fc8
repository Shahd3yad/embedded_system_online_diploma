#include <stdio.h>
#include <stdlib.h>

int main(void) {
	char c;
	int a,b;
	printf("enter operator either +,-,*,/ ");
	fflush(stdin); fflush(stdout);
	scanf("%c", &c);
	printf("enter two numbers ");
	fflush(stdin); fflush(stdout);
	scanf("%d %d", &a, &b);
	switch(0){
	case'+':
		printf("%d + %d =%d", a,b,a+b);
		break;

	case'-':
		printf("%d - %d =%d", a,b,a-b);
		break;
	case'*':
		printf("%d * %d =%d", a,b,a*b);
		break;
	case'/':
		printf("%d / %d =%d", a,b,a/b);
		break;
	default:
		printf("ERORR!!!");
		break;
	}

}
